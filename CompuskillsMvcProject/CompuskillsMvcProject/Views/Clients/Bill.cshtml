@model MvcProjectDbConn.Project


@section scripts{
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    <script>
        $(function () {
            $.ajax({
                url:@Url.Action("BillTotal","Clients",new { project=Model.ProjectId,Client=Model.ClientID}),
                success: function (@ViewBag.Total) {
                    $("Bill").html(@ViewBag.Total)
                }
            })
            $("div.btn btn-default").on("click", function () {
                $.ajax({
                    url:@Url.Action("BillTotal","Clients",new { project=Model.ProjectId,Client=Model.ClientID}),
                    success: function (@ViewBag.Total) {
                        $("Bill").html(@ViewBag.Total)
                    }
                });
            });
            })
    </script>
    }
