@model MvcProjectDbConn.Client

@{
    ViewBag.Title = "Delete";
}

@{ if (ViewBag.error == true)
    {
    <p>Please ensure that there is a number at the end of the url</p>
    }
    else if (ViewBag.clientError == true)
    {
<p>We don't have a client with that id number in our system</p>
    }
    else
    {
<h2>Delete</h2>

<h3><strong>Are you sure you want to delete this? You may want to think twice as deleting this client will delete
    all records of him in the system including billing information which will be irretrievable.
    Are you sure you want to continue</strong></h3>
<div>
    <h4>Client</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClientName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClientEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClientEmail)
        </dd>

    </dl>
    @Html.ValidationMessage("error")
    @Html.ValidationMessage("clientError")
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "UserIndex")
        </div>
    }
</div>
        }
    }