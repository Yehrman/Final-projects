@model IEnumerable<MvcProjectDbConn.Project>

@{
    ViewBag.Title = "UserIndex";
}

<h2>UserIndex</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.ClientName)
        </th>
     
        <th>
            @Html.DisplayNameFor(model => model.BillRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.ClientName)
        </td>
    
        <td>
            @Html.DisplayFor(modelItem => item.BillRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProjectId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProjectId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProjectId })|
           <%= @Html.ActionLink("Schedule this job", "Schedule", "WorkSchedules",new { id=item.ProjectId},null)%>
        </td>
    </tr>
}

</table>
