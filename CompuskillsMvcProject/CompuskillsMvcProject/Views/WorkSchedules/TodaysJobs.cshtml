@model IEnumerable<MvcProjectDbConn.WorkSchedule>

@{
    ViewBag.Title = "TodaysJobs";
}

<h2>Todays Jobs</h2>
@section scripts{
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    <script>
        $("span#out").hide();
        $("span#in").on("click", function () {
            $(this).hide();
            $("span#out").show();
        });
        $("span#out").on("click", function () {
            $(this).hide();
            $("span#in").show();
        });
    </script>
}
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Project.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.ClientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Project.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>

                @Html.ActionLink("Reschedule", "ReSchedule", new { id = item.id }) |

                <span id="in">
                    @Ajax.ActionLink("Punchin", "PunchIn","TimeSheetEntries", new { id = item.ProjectId },
new AjaxOptions { UpdateTargetId = "PunchIn" })|
                </span>

                <span id="out">
                    <% @Html.ActionLink("PunchOut","PunchOut","TimeSheetEntries")%>
                </span>

            </td>
        </tr>
    }

</table>
<div id="PunchIn"></div>
